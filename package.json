{
	"name": "bun-storage",
	"version": "1.0.2",
	"description": "A ponyfill for the Storage API, utilizing SQLite",
	"exports": "./index.ts",
	"type": "module",
	"engines": {
		"bun": ">=1.0.0",
		"node": ">=20"
	},
