{
	"$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
	"organizeImports": {
		"enabled": true
	},
	"files": {
		"include": [
			".vscode/*.json",
			"*.ts",
			"biome.json",
			"README.md",
			"tsconfig.json"
		]
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"complexity": {
				"noForEach": "warn"
			}
		}
	},
	"formatter": {
		"useEditorconfig": true
	},
	"javascript": {
		"formatter": {
			"bracketSpacing": true,
			"lineEnding": "lf",
			"lineWidth": 120,
			"quoteStyle": "single",
			"semicolons": "always"
		}
	}
}
